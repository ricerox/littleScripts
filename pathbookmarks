#!/usr/bin/env bash

#
# Create and access bookmarks for file paths
# Author: pixELSflash
# License: MIT
# Repo: https://github.com/pixELSflash/littleScripts/
#

bookmarkFile="${HOME}/.pathBookmarks"

if (( $# == 0 )) || [[ "${1}" == "--list" ]]; then
    cat "${bookmarkFile}"
    exit
fi

if (( $# > 2 )) || [[ "${*}" == *"-h"* ]] || [[ "${*}" == *"--help"* ]]; then
    echo "USAGE: $0 { searchPattern | {name} {path} }"
fi

if [[ "${1}" == "--file" ]]; then
    echo "${bookmarkFile}"
    exit
fi

if (( $# == 1 )); then
    searchString="${*}"

    while read -r line; do
        if echo "${line}" | grep -iq -- "${searchString}"; then
            echo "${line}" |
                cut -d":" -f1 --complement |
                sed 's/^[[:space:]]*//'
        fi
    done <"${bookmarkFile}"

elif (( $# == 2 )); then
    name="${1}"
    path="$( realpath "${2}" )"

    echo "${name} : ${path}" >>"${bookmarkFile}"
fi
